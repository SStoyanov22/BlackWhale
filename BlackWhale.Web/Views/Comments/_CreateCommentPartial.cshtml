@model BlackWhale.Web.ViewModels.Comment.CreateCommentViewModel
<div class="container post format-standart" id="create-comment-container">
    @Html.HiddenFor(c=> c.ReviewId)
    <div class="entry">

        <div class="entry-content">
            
           @Html.TextBoxFor(c=> c.Content, new { @id = "comment-content"})
            <button type="button" class="btn btn-info" id="create-comment-button-@Model.ReviewId">Create</button>
        </div>

    </div>
    <hr>
</div>

<script src="~/Content/scripts/comment.module.js"></script>
<script>
    $(document).ready(function () {

        commentModule.configureCreateComment(@Model.ReviewId);
    })
</script>