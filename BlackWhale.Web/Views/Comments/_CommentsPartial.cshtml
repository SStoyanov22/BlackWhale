@model BlackWhale.Web.ViewModels.Comment.CommentIndexWrapperViewModel

<div class="detailBox">
    <div class="actionBox">
        <ul class="commentList">
            @Html.DisplayFor(c => c.Comments)
        </ul>
        <div class="form-inline">
            <div class="form-group">
                <textarea  id="comment-input-field"class="form-control" type="text" placeholder="Leave your comments" />
            </div>
            <div class="form-group">
                <button class="btn btn-primary" id="button-comment-@Model.ReviewId">Add Comment</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Content/scripts/comment.module.js"></script>
<script>
    $(document).ready(function () {

        commentModule.configureCreateComment(@Model.ReviewId);
    })
</script>