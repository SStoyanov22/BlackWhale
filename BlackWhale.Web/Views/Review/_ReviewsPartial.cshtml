@model BlackWhale.Web.ViewModels.Review.ReviewPagedViewModel
    @Html.HiddenFor(c => c.NumberOfPages, new {@id ="number-of-pages" })
<div class="content">
    @Html.DisplayFor(m => m.Reviews)
</div>
<div class="container text-center">
    <ul class="pagination">
        <li><a href="#" class="prev"><i class="fa fa-angle-left"></i></a></li>
        @for (int i = 0; i < Model.NumberOfPages; i++)
        {
            var index = i+1;

            <li ><a id="page-button-@index" href="#/" data="@index">@index</a></li>
        }
        <li><a href="#" class="next"><i class="fa fa-angle-right"></i></a></li>
    </ul>
</div>





