@model BlackWhale.Web.ViewModels.Review.ReviewCreateViewModel
@using (Html.BeginForm("Create", "Review", FormMethod.Post, new { @class = "form-horizontal" , @id= "review-form"}))
{
<div class="wrapper">
    <header class="pagetitle pagetitle-sm">
        <div class="container">
            <div class="divtable irow">
                <div class="divcell">
                    <h1>Review</h1>
                    <div class="divider">
                    </div>
                    <span class="subtitle">Create Review</span>
                </div>
            </div>
        </div>
    </header>
    <div class="content">
        <div class="row irow-xs">
            <div class="col-sm-10">
                <div class="form-group">
                    @Html.LabelFor(r => r.Title, new { @class = "col-sm-12" })
                    <div class="col-sm-10" id="form-review-content">
                        @Html.TextBoxFor(r => r.Title)
                    </div>
                </div>
                <div class="form-group col-sm-offset-10">
                    @Html.DropDownListFor(c => c.Category, Model.Categories )
                </div>
                <div class="form-group">
                    @Html.LabelFor(r => r.Description, new { @class = "col-sm-12" })
                    <div class="col-sm-10" id="form-review-content">
                        @Html.TextAreaFor(r => r.Description)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(r => r.Article, new { @class = "col-sm-12" })
                    <div class="col-sm-10" id="form-review-content">
                        @Html.TextAreaFor(r => r.Article, new { @id = "review-text-area"})
                        <input type="file" id="images-upload" name="files" multiple style="display : none">
                    </div>
                </div>
            </div>
        </div>

        <button type="submit" class="btn btn-info"> Create </button>
    </div>
</div>
}
<script src="~/Content/scripts/review.module.js"></script>
<script>
    $(document).ready(function () {
        reviewModule.configReviewCreateView();
    })
</script>