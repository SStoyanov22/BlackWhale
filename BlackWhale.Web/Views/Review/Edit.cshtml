@model BlackWhale.Web.ViewModels.Review.ReviewEditViewModel
@using BlackWhale.Commons.Constants;
@using (Html.BeginForm("Edit", "Review", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", @id = "review-form" }))
{
    @Html.HiddenFor(c => c.Id)
    @Html.HiddenFor(c => c.ImageUrl)
    <div class="wrapper">
        <header class="pagetitle pagetitle-sm">
            <div class="container">
                <div class="divtable irow">
                    <div class="divcell">
                        <h1>Review</h1>
                        <div class="divider">
                        </div>
                        <span class="subtitle">Edit Review</span>
                    </div>
                </div>
            </div>
        </header>
        <div class="content">
            <div class="row irow-xs">
                <div class="col-sm-10">
                    <div class="form-group">
                        @Html.LabelFor(r => r.Title, new { @class = "col-sm-12" })
                        <div class="col-sm-10" id="form-review-content">
                            @Html.TextBoxFor(r => r.Title)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(r => r.Categories, new { @class = "col-sm-12" })
                        <div class="col-sm-10" id="form-review-content">
                            @Html.DropDownListFor(r => r.CategoryId, @Model.Categories)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(r => r.Statuses, new { @class = "col-sm-12" })
                        <div class="col-sm-10" id="form-review-content">
                            @Html.DropDownListFor(r => r.StatusId, @Model.Statuses)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(r => r.Description, new { @class = "col-sm-12" })
                        <div class="col-sm-10" id="form-review-content">
                            @Html.TextAreaFor(r => r.Description)
                        </div>
                    </div>
                    <div class="form-group">
                        <div>
                            @Html.LabelFor(r => r.ImageUrl, new { @class = "col-sm-12" })
                            <img id="edit-review-image-preview" src="@GlobalConstants.IMAGE_PATH@Model.ImageUrl"/>
                        </div>
                        
                        <div class="col-sm-10" id="form-review-content">
                            <input type="file" name="Image" />
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(r => r.Article, new { @class = "col-sm-12" })
                        <div class="col-sm-10" id="form-review-content">
                            @Html.TextAreaFor(r => r.Article, new { @id = "review-text-area" })
                            <input type="file" id="images-upload" name="files" multiple style="display : none">
                        </div>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-info"> Edit </button>
        </div>
    </div>
}
<script src="~/Content/scripts/review.module.js"></script>
<script>
    $(document).ready(function () {
        reviewModule.configReviewCreateView();
    })
</script>